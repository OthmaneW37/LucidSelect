    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1",
      "^@utils/(.*)$": "<rootDir>/utils/$1",
      "^@ui/(.*)$": "<rootDir>/ui/$1",
      "^@workers/(.*)$": "<rootDir>/workers/$1",
