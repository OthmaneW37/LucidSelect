# Configuration npm pour LucidSelect

# Utiliser le cache pour accélérer les installations
cache=true

# Sauvegarder les dépendances exactes
save-exact=true

# Ne pas générer de package-lock.json (nous utilisons yarn.lock)
package-lock=false

# Niveau de log
loglevel=warn

# Timeout pour les requêtes npm
fetch-timeout=60000

# Utiliser HTTPS pour les requêtes npm
strict-ssl=true

# Désactiver les audits automatiques pour accélérer les installations
audit=false

# Désactiver les mises à jour de notification
update-notifier=false

# Désactiver les métriques de collecte de données
send-metrics=false